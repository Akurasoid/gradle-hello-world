pipeline{
    agent {
        label 'slave1'
    }
    tools {
        gradle 'gradle4'
    }
    stages{
		stage ('Checkout'){
            steps{
      			checkout scm  
            } 
   		}
   		stage ('build'){
            steps{
      	        sh "gradle build"
            }
   		}
    }
    post{
        success {
            addBadge(icon: 'completed.gif', text: 'OK')
        }
        failure {
            addBadge(icon: 'error.gif', text: 'Error')
        }
    }
}
